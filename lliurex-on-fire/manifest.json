{
  "manifest_version": 2,
  "name": "LliurexOnFire",
  "version": "0.7",

  "description": "Add custom settings for LliureX",
  
  "icons": {
    "16": "icons/lliurex_on_fire16.png",
    "48": "icons/lliurex_on_fire48.png",
    "64": "icons/lliurex_on_fire64.png",
    "128": "icons/lliurex_on_fire128.png"
  },

  "permissions": [
	"history",
	"tabs",
	"webNavigation",
	"bookmarks"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Qwant",
      "search_url":"https://www.qwant.com/?q={searchTerms}&t=web",
      "keyword": "q:",
      "encoding": "UTF-8",
      "is_default": true}
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Qwant",
      "search_url":"https://www.qwant.com/?q={searchTerms}&t=web",
      "keyword": "q:",
      "encoding": "UTF-8",
      "is_default": true}

  },
  "background": 
    {
      "scripts": ["lliurex_on_fire.js"]
    }
}
